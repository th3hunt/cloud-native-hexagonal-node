{
  "name": "cloud-native-hexagonal-node",
  "description": "A cloud native node microservice boilerplate based on the hexagonal architecture",
  "keywords": [
    "12-factor",
    "boilerplate",
    "clean-architecture",
    "cloud-native",
    "hexagonal-architecture",
    "microservices",
    "nodejs"
  ],
  "homepage": "https://github.com/th3hunt/cloud-native-hexagonal-node#readme",
  "bugs": {
    "url": "https://github.com/th3hunt/cloud-native-hexagonal-node/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/th3hunt/cloud-native-hexagonal-node.git"
  },
  "license": "MIT",
  "author": "Stratos Pavlakis",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production babel src -d dist -s",
    "cmd": "babel-node ./src/cli",
    "dev": "nodemon src/index.js | pino-pretty -c -t",
    "jsdocs": "jsdoc --configure .jsdoc.json --verbose",
    "lint": "eslint --fix src",
    "start": "node dist/index.js",
    "pretest": "rimraf reports/unit",
    "test": "jest -c jest/config.unit.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "dependencies": {
    "amqplib": "0.5.5",
    "boom": "7.3.0",
    "commander": "3.0.2",
    "dotenv": "8.1.0",
    "koa": "2.8.2",
    "koa-bodyparser": "4.2.1",
    "koa-helmet": "5.2.0",
    "koa-pino-logger": "2.1.3",
    "koa-router": "7.4.0",
    "pino": "5.13.4",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/node": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "babel-jest": "24.9.0",
    "babel-plugin-module-resolver": "3.2.0",
    "cross-env": "6.0.3",
    "eslint": "6.5.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.4.0",
    "eslint-import-resolver-babel-module": "5.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "husky": ">=1",
    "jest": "24.9.0",
    "jest-html-reporter": "2.6.2",
    "jsdoc": "3.6.3",
    "lint-staged": ">=8",
    "minami": "1.2.3",
    "nodemon": "1.19.3",
    "pino-pretty": "3.2.1",
    "prettier": "1.18.2",
    "rimraf": "3.0.0"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.9"
  }
}
