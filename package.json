{
  "name": "cloud-native-hexagonal-node",
  "version": "1.0.0",
  "description": "A cloud native node microservice boilerplate based on the hexagonal architecture",
  "keywords": [
    "12-factor",
    "boilerplate",
    "clean-architecture",
    "cloud-native",
    "hexagonal-architecture",
    "microservices",
    "nodejs"
  ],
  "homepage": "https://github.com/th3hunt/cloud-native-hexagonal-node#readme",
  "bugs": {
    "url": "https://github.com/th3hunt/cloud-native-hexagonal-node/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/th3hunt/cloud-native-hexagonal-node.git"
  },
  "license": "MIT",
  "author": "Stratos Pavlakis",
  "scripts": {
    "build": "rimraf dist && cross-env NODE_ENV=production babel src -d dist -s",
    "dev": "nodemon src/index.js",
    "jsdocs": "jsdoc --configure .jsdoc.json --verbose",
    "lint": "eslint --fix src",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "dependencies": {
    "dotenv": "8.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/node": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "babel-plugin-module-resolver": "3.2.0",
    "cross-env": "6.0.3",
    "eslint": "6.5.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.4.0",
    "eslint-import-resolver-babel-module": "5.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "husky": ">=1",
    "jsdoc": "3.6.3",
    "lint-staged": ">=8",
    "minami": "1.2.3",
    "nodemon": "1.19.3",
    "prettier": "1.18.2",
    "rimraf": "3.0.0"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.9"
  }
}
